{
    "compilerOptions": {
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "module": "System",
        "target": "ES2015",
        "outFile": "../Plugins/easy-containers.js",
        "lib": [
            "ES2015"
        ],
        "paths": {
            "chai": [
                "./node_modules/@types/chai"
            ]
        }
    },
    "include": [
        "./*.ts"
    ]
}